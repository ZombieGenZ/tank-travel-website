<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet"/>
    <title>Ticket information</title>
    <link rel="stylesheet" href="/css/ticket-information.css">
</head>
<body>
    <nav id="navbar">
        <div class="nav_logo">TANK TRAVEL</div>
        <ul class="ul_links"  id="ul_links">
            <li class="link"  id="ticket-information"><a href="#"><i class="ri-coupon-2-fill"></i> Route information</a></li>
            <li class="link"><a href="#"><i class="ri-contacts-book-2-fill"></i> Contact us</a></li>
        </ul>
        <div class="personal_login" id="personal_infor">
            <button class="btn" id="signup_business">Business registration</button>
            <button class="btn" id="btn_login">Login</button>
        </div>
    </nav>

    <div class="dropdown_personal" id="dropdown_personal">
        <ul>
            <li class="link" id="profile"><a href="#"><i class="ri-profile-fill"></i> Your profile</a></li>
            <li class="link" id="logout"><a href="#"><i class="ri-logout-box-r-fill"></i> Log out</a></li>
        </ul>
    </div>

    <section class="section_container ticket_information">
        <ul class="list_ticket">
            <li class="each_ticket">
                <div class="information">
                    <h3>Da Lat to Ho Chi Minh city</h3>
                    <div class="date_local">
                        <div class="detail_ticket start_point">
                            <h4>Departure:</h4>
                            <p>Da Lat</p>
                        </div>
                        <div class="detail_ticket end_point">
                            <h4>Destination:</h4>
                            <p>Ho Chi Minh city</p>
                        </div>
                        <div class="detail_ticket date_begin">
                            <h4>Date:</h4>
                            <p>15/12/2025</p>
                        </div>
                        <div class="detail_ticket price">
                            <h4>Price:</h4>
                            <p>300.000 VND</p>
                        </div>
                    </div>
                    <div class="morinfor_bookbutton">
                        <button class="btn">More information</button>
                        <button class="btn">Book</button>    
                    </div>                    
                </div>
            </li>
            <li class="each_ticket">
                <div class="information">
                    <h3>Da Lat to Ho Chi Minh city</h3>
                    <div class="date_local">
                        <div class="detail_ticket start_point">
                            <h4>Departure:</h4>
                            <p>Da Lat</p>
                        </div>
                        <div class="detail_ticket end_point">
                            <h4>Destination:</h4>
                            <p>Ho Chi Minh city</p>
                        </div>
                        <div class="detail_ticket date_begin">
                            <h4>Date:</h4>
                            <p>15/12/2025</p>
                        </div>
                        <div class="detail_ticket price">
                            <h4>Price:</h4>
                            <p>300.000 VND</p>
                        </div>
                    </div>
                    <div class="morinfor_bookbutton">
                        <button class="btn">More information</button>
                        <button class="btn">Book</button>    
                    </div>
                </div>    
            </li>
        </ul>
        <div class="see_more">
            <h3>See more <i class="ri-arrow-down-line"></i></h3>
        </div>
    </section>
    <footer class="section_container footer">
        <div class="footer__container">
            <div class="footer__col">
                <img src="/images/system/TANK_logo_rmbg.png" alt="">
            </div>
            <div class="footer__col">
                <h3>POLICY</h3>
                <p>information security policy</p>
                <p>ticket delivery / receipt policy</p>
                <p>Cancellation / exchange / return policy</p>
